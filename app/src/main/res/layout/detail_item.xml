<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <TextView

        android:id="@+id/hour"
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_and_padding"
        android:layout_marginBottom="@dimen/margin_and_padding"
        android:text="0:00"
        android:textSize="@dimen/sizeDetailText" />

    <TextView
        android:id="@+id/hours_temperature"
        style="@style/textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/margin_and_padding"
        android:layout_marginTop="@dimen/margin_and_padding"
        android:layout_marginBottom="@dimen/margin_and_padding"

        android:text="@string/temperature"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sizeDetailText" />

</androidx.cardview.widget.CardView>






